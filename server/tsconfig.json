  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types, ./types"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"]
}
